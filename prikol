    <!-- Scripts -->
    <script>
        // ==================== APP CONFIGURATION ====================
        const APP_NAME = 'SocialNetworkHub';
        const APP_VERSION = '2.0.0';
        const DATA_VERSION = '2';
        
        // Emoji and sticker sets
        const EMOJIS = ['üòÄ','üòÉ','üòÑ','üòÅ','üòÜ','üòÖ','üòÇ','ü§£','ü•≤','üòä','üòá','üôÇ','üôÉ','üòâ','üòå','üòç','ü•∞','üòò','üòó','üòô','üòö','üòã','üòõ','üòù','üòú','ü§™','ü§®','üßê','ü§ì','üòé','ü•∏','ü§©','ü•≥','üòè','üòí','üòû','üòî','üòü','üòï','üôÅ','‚òπÔ∏è','üò£','üòñ','üò´','üò©','ü•∫','üò¢','üò≠','üò§','üò†','üò°','ü§¨','ü§Ø','üò≥','ü•µ','ü•∂','üò±','üò®','üò∞','üò•','üòì','ü§ó','ü§î','ü§≠','ü§´','ü§•','üò∂','üòê','üòë','üò¨','üôÑ','üòØ','üò¶','üòß','üòÆ','üò≤','ü•±','üò¥','ü§§','üò™','üòµ','ü§ê','ü•¥','ü§¢','ü§Æ','ü§ß','üò∑','ü§í','ü§ï','ü§ë','ü§†','üòà','üëø','üëπ','üë∫','ü§°','üí©','üëª','üíÄ','‚ò†Ô∏è','üëΩ','üëæ','ü§ñ','üéÉ'];
        const STICKERS = ['üò∫','üò∏','üòπ','üòª','üòº','üòΩ','üôÄ','üòø','üòæ','üê±','üêà','üêà‚Äç‚¨õ','üê∂','üêï','üê©','ü¶Æ','üêï‚Äçü¶∫','üê∫','ü¶ä','ü¶ù','üê±','üêà','üêà‚Äç‚¨õ','üêØ','ü¶Å','üêÆ','üêÇ','üêÉ','üêÑ','üê∑','üêñ','üêó','üêΩ','üêè','üêë','üêê','üê™','üê´','ü¶ô','ü¶í','üêò','ü¶è','ü¶õ','üê≠','üêÅ','üêÄ','üêπ','üê∞','üêá','üêøÔ∏è','ü¶î','ü¶á','üêª','üê®','üêº','ü¶•','ü¶¶','ü¶®','ü¶ò','ü¶°','üêæ','ü¶É','üêî','üêì','üê£','üê§','üê•','üê¶','üêß','üïäÔ∏è','ü¶Ö','ü¶Ü','ü¶¢','ü¶â','ü¶©','ü¶ö','ü¶ú','üê∏','üêä','üê¢','ü¶é','üêç','üê≤','üêâ','ü¶ï','ü¶ñ','üê≥','üêã','üê¨','üêü','üê†','üê°','ü¶à','üêô','üêö','ü¶Ä','ü¶û','ü¶ê','ü¶ë','üêå','ü¶ã','üêõ','üêú','üêù','üêû','ü¶ó','üï∑Ô∏è','üï∏Ô∏è','ü¶Ç'];
        const REACTIONS = ['‚ù§Ô∏è','üëç','üòÇ','üòÆ','üò¢','üëè','üî•','‚ú®','üéâ','ü§î','üòç','ü•∞'];
        
        // ==================== GLOBAL VARIABLES ====================
        let currentUser = null;
        let users = {};
        let messages = {};
        let posts = [];
        let groups = [];
        let channels = [];
        let privateChats = [];
        let reactions = {};
        let currentChat = null;
        let currentChatType = null;
        let selectedMessageForReaction = null;
        let lastMessageTimestamps = {};
        let unreadCounts = {};
        let typingUsers = {};
        let connectionStatus = 'online';
        let isInitialized = false;
        
        // ==================== DATA MANAGEMENT ====================
        
        // Initialize data with versioning and migration
        function initializeData() {
            showLoading('–ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö...');
            
            try {
                // Check data version and migrate if needed
                const dataVersion = localStorage.getItem(`${APP_NAME}_version`);
                if (!dataVersion || dataVersion !== DATA_VERSION) {
                    migrateData(dataVersion);
                }
                
                // Load all data
                users = JSON.parse(localStorage.getItem(`${APP_NAME}_users`)) || {};
                posts = JSON.parse(localStorage.getItem(`${APP_NAME}_posts`)) || [];
                groups = JSON.parse(localStorage.getItem(`${APP_NAME}_groups`)) || [];
                channels = JSON.parse(localStorage.getItem(`${APP_NAME}_channels`)) || [];
                privateChats = JSON.parse(localStorage.getItem(`${APP_NAME}_privateChats`)) || [];
                reactions = JSON.parse(localStorage.getItem(`${APP_NAME}_reactions`)) || {};
                
                // Load messages with better structure
                const messagesData = JSON.parse(localStorage.getItem(`${APP_NAME}_messages`)) || {};
                messages = messagesData;
                
                // Initialize unread counts
                Object.keys(messages).forEach(chatId => {
                    if (!unreadCounts[chatId]) {
                        unreadCounts[chatId] = 0;
                    }
                });
                
                // Load current user from session
                const savedUser = sessionStorage.getItem(`${APP_NAME}_currentUser`);
                if (savedUser) {
                    currentUser = JSON.parse(savedUser);
                    showApp();
                    hideLoading();
                    
                    // Show tutorial for new users
                    const tutorialShown = localStorage.getItem(`${APP_NAME}_tutorialShown`);
                    if (!tutorialShown) {
                        setTimeout(() => {
                            showTutorial();
                        }, 1000);
                    }
                } else {
                    hideLoading();
                }
                
                isInitialized = true;
                
            } catch (error) {
                console.error('Error initializing data:', error);
                // Create fresh data if corrupted
                resetData();
                hideLoading();
            }
        }
        
        // Migrate data from older versions
        function migrateData(oldVersion) {
            console.log(`Migrating data from version ${oldVersion} to ${DATA_VERSION}`);
            
            if (!oldVersion) {
                // Initial migration from version 1
                const oldMessages = JSON.parse(localStorage.getItem(`${APP_NAME}_messages`)) || [];
                const newMessages = {};
                
                // Convert old message array to new structure
                oldMessages.forEach(msg => {
                    if (!newMessages[msg.chat]) {
                        newMessages[msg.chat] = [];
                    }
                    newMessages[msg.chat].push(msg);
                });
                
                localStorage.setItem(`${APP_NAME}_messages`, JSON.stringify(newMessages));
            }
            
            localStorage.setItem(`${APP_NAME}_version`, DATA_VERSION);
        }
        
        // Reset all data (for debugging)
        function resetData() {
            if (confirm('–í–æ—Å—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –≤—Å–µ –¥–∞–Ω–Ω—ã–µ? –≠—Ç–æ —É–¥–∞–ª–∏—Ç –≤—Å–µ –≤–∞—à–∏ —Å–æ–æ–±—â–µ–Ω–∏—è, –ø–æ—Å—Ç—ã –∏ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏.')) {
                localStorage.clear();
                sessionStorage.clear();
                location.reload();
            }
        }
        
        // Save all data with error handling
        function saveData() {
            if (!isInitialized) return;
            
            try {
                localStorage.setItem(`${APP_NAME}_users`, JSON.stringify(users));
                localStorage.setItem(`${APP_NAME}_posts`, JSON.stringify(posts));
                localStorage.setItem(`${APP_NAME}_groups`, JSON.stringify(groups));
                localStorage.setItem(`${APP_NAME}_channels`, JSON.stringify(channels));
                localStorage.setItem(`${APP_NAME}_privateChats`, JSON.stringify(privateChats));
                localStorage.setItem(`${APP_NAME}_reactions`, JSON.stringify(reactions));
                localStorage.setItem(`${APP_NAME}_messages`, JSON.stringify(messages));
                localStorage.setItem(`${APP_NAME}_version`, DATA_VERSION);
                
                // Backup to session storage for safety
                sessionStorage.setItem(`${APP_NAME}_currentUser`, JSON.stringify(currentUser));
                
            } catch (error) {
                console.error('Error saving data:', error);
                showError('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö', '–ù–µ —É–¥–∞–ª–æ—Å—å —Å–æ—Ö—Ä–∞–Ω–∏—Ç—å –∏–∑–º–µ–Ω–µ–Ω–∏—è. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –¥–æ—Å—Ç—É–ø–Ω–æ–µ –º–µ—Å—Ç–æ –≤ —Ö—Ä–∞–Ω–∏–ª–∏—â–µ.');
            }
        }
        
        // Export all data as backup
        function exportData() {
            const data = {
                users,
                posts,
                groups,
                channels,
                privateChats,
                reactions,
                messages,
                version: DATA_VERSION,
                exportedAt: new Date().toISOString()
            };
            
            const dataStr = JSON.stringify(data, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            const url = URL.createObjectURL(dataBlob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = `social-network-backup-${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            showSuccess('–î–∞–Ω–Ω—ã–µ —ç–∫—Å–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω—ã', '–†–µ–∑–µ—Ä–≤–Ω–∞—è –∫–æ–ø–∏—è —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω–∞.');
        }
        
        // Import data from backup
        function importData() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (!file) return;
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    try {
                        const data = JSON.parse(e.target.result);
                        
                        // Validate data structure
                        if (!data.users || !data.version) {
                            throw new Error('–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç —Ñ–∞–π–ª–∞');
                        }
                        
                        if (confirm('–ò–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –¥–∞–Ω–Ω—ã–µ? –¢–µ–∫—É—â–∏–µ –¥–∞–Ω–Ω—ã–µ –±—É–¥—É—Ç –∑–∞–º–µ–Ω–µ–Ω—ã.')) {
                            users = data.users || {};
                            posts = data.posts || [];
                            groups = data.groups || [];
                            channels = data.channels || [];
                            privateChats = data.privateChats || [];
                            reactions = data.reactions || {};
                            messages = data.messages || {};
                            
                            saveData();
                            location.reload();
                        }
                    } catch (error) {
                        showError('–û—à–∏–±–∫–∞ –∏–º–ø–æ—Ä—Ç–∞', '–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç —Ñ–∞–π–ª–∞ –∏–ª–∏ –ø–æ–≤—Ä–µ–∂–¥–µ–Ω–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ.');
                    }
                };
                reader.readAsText(file);
            };
            
            input.click();
        }
        
        // ==================== AUTHENTICATION ====================
        
        function showAuthForm(form) {
            document.querySelectorAll('.auth-form').forEach(f => f.classList.remove('active'));
            document.querySelectorAll('.auth-tab').forEach(t => t.classList.remove('active'));
            
            document.getElementById(form + 'Form').classList.add('active');
            event.target.classList.add('active');
        }
        
        function register() {
            const username = document.getElementById('registerUsername').value.trim().toLowerCase();
            const password = document.getElementById('registerPassword').value;
            const confirm = document.getElementById('registerConfirm').value;
            const name = document.getElementById('registerName').value.trim();
            const phone = document.getElementById('registerPhone').value.trim();
            
            // Validation
            if (username.length < 3 || username.length > 20) {
                showError('–û—à–∏–±–∫–∞', '–ù–∏–∫–Ω–µ–π–º –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –æ—Ç 3 –¥–æ 20 —Å–∏–º–≤–æ–ª–æ–≤');
                return;
            }
            
            if (!/^[a-zA-Z0-9_]+$/.test(username)) {
                showError('–û—à–∏–±–∫–∞', '–ù–∏–∫–Ω–µ–π–º –º–æ–∂–µ—Ç —Å–æ–¥–µ—Ä–∂–∞—Ç—å —Ç–æ–ª—å–∫–æ –±—É–∫–≤—ã, —Ü–∏—Ñ—Ä—ã –∏ –ø–æ–¥—á–µ—Ä–∫–∏–≤–∞–Ω–∏—è');
                return;
            }
            
            if (password.length < 6) {
                showError('–û—à–∏–±–∫–∞', '–ü–∞—Ä–æ–ª—å –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –Ω–µ –º–µ–Ω–µ–µ 6 —Å–∏–º–≤–æ–ª–æ–≤');
                return;
            }
            
            if (password !== confirm) {
                showError('–û—à–∏–±–∫–∞', '–ü–∞—Ä–æ–ª–∏ –Ω–µ —Å–æ–≤–ø–∞–¥–∞—é—Ç');
                return;
            }
            
            if (users[username]) {
                showError('–û—à–∏–±–∫–∞', '–≠—Ç–æ—Ç –Ω–∏–∫–Ω–µ–π–º —É–∂–µ –∑–∞–Ω—è—Ç');
                return;
            }
            
            // Create user
            users[username] = {
                password: btoa(password), // Simple encoding for demo
                name: name || username,
                phone: phone || '',
                avatar: '',
                role: 'user',
                bio: '',
                joined: new Date().toISOString(),
                lastSeen: new Date().toISOString(),
                online: true,
                friends: [],
                settings: {
                    theme: 'light',
                    notifications: true,
                    privacy: 'public'
                }
            };
            
            // Auto-login
            currentUser = {
                username: username,
                name: name || username,
                phone: phone || '',
                avatar: '',
                role: 'user',
                joined: new Date().toISOString(),
                online: true
            };
            
            sessionStorage.setItem(`${APP_NAME}_currentUser`, JSON.stringify(currentUser));
            saveData();
            showApp();
            showSuccess('–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å!', `–í—ã —É—Å–ø–µ—à–Ω–æ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–ª–∏—Å—å –∫–∞–∫ ${username}`);
            
            // Add welcome message
            addWelcomeMessage(username);
        }
        
        function login() {
            const username = document.getElementById('loginUsername').value.trim().toLowerCase();
            const password = document.getElementById('loginPassword').value;
            
            const user = users[username];
            if (!user) {
                showError('–û—à–∏–±–∫–∞', '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–µ –Ω–∞–π–¥–µ–Ω');
                return;
            }
            
            if (user.password !== btoa(password)) {
                showError('–û—à–∏–±–∫–∞', '–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å');
                return;
            }
            
            // Update user status
            user.lastSeen = new Date().toISOString();
            user.online = true;
            
            currentUser = {
                username: username,
                name: user.name,
                phone: user.phone,
                avatar: user.avatar,
                role: user.role,
                joined: user.joined,
                online: true
            };
            
            sessionStorage.setItem(`${APP_NAME}_currentUser`, JSON.stringify(currentUser));
            saveData();
            showApp();
            showSuccess('–° –≤–æ–∑–≤—Ä–∞—â–µ–Ω–∏–µ–º!', `–†–∞–¥—ã –≤–∏–¥–µ—Ç—å –≤–∞—Å —Å–Ω–æ–≤–∞, ${user.name}`);
        }
        
        function logout() {
            if (currentUser && users[currentUser.username]) {
                users[currentUser.username].online = false;
                users[currentUser.username].lastSeen = new Date().toISOString();
                saveData();
            }
            
            currentUser = null;
            sessionStorage.removeItem(`${APP_NAME}_currentUser`);
            document.getElementById('mainApp').classList.remove('active');
            document.getElementById('authOverlay').style.display = 'flex';
            showInfo('–í—ã –≤—ã—à–ª–∏', '–î–æ —Å–∫–æ—Ä—ã—Ö –≤—Å—Ç—Ä–µ—á!');
        }
        
        // ==================== UI MANAGEMENT ====================
        
        function showLoading(text) {
            document.getElementById('loadingText').textContent = text;
            document.getElementById('loadingOverlay').classList.remove('hidden');
        }
        
        function hideLoading() {
            document.getElementById('loadingOverlay').classList.add('hidden');
        }
        
        function showApp() {
            document.getElementById('authOverlay').style.display = 'none';
            document.getElementById('mainApp').classList.add('active');
            updateUI();
            loadFeed();
            renderChatsList();
            renderGroups();
            renderChannels();
            initPickers();
            
            // Start periodic updates
            setInterval(updateOnlineStatus, 30000);
            setInterval(checkUnreadMessages, 10000);
        }
        
        function updateUI() {
            if (!currentUser) return;
            
            // Update user info
            document.getElementById('displayName').textContent = currentUser.name;
            document.getElementById('profileName').textContent = currentUser.name;
            document.getElementById('profileUsername').textContent = `@${currentUser.username}`;
            document.getElementById('infoName').textContent = currentUser.name;
            document.getElementById('infoUsername').textContent = `@${currentUser.username}`;
            document.getElementById('infoPhone').textContent = currentUser.phone || '–ù–µ —É–∫–∞–∑–∞–Ω';
            document.getElementById('infoJoinDate').textContent = new Date(currentUser.joined).toLocaleDateString();
            document.getElementById('infoStatus').textContent = currentUser.online ? '–û–Ω–ª–∞–π–Ω' : '–û—Ñ–ª–∞–π–Ω';
            
            // Update avatar
            updateAvatar();
            
            // Update counts
            updateCounts();
        }
        
        function updateAvatar() {
            const avatar = currentUser.avatar;
            const avatarEl = document.getElementById('userAvatar');
            const profileAvatarEl = document.getElementById('profileAvatar');
            
            if (avatar) {
                avatarEl.style.backgroundImage = `url(${avatar})`;
                avatarEl.textContent = '';
                profileAvatarEl.style.backgroundImage = `url(${avatar})`;
                profileAvatarEl.textContent = '';
            } else {
                avatarEl.style.backgroundImage = '';
                avatarEl.textContent = currentUser.name.charAt(0).toUpperCase();
                profileAvatarEl.style.backgroundImage = '';
                profileAvatarEl.textContent = currentUser.name.charAt(0).toUpperCase();
            }
        }
        
        function updateCounts() {
            // Posts count
            const userPosts = posts.filter(p => p.author === currentUser.username);
            document.getElementById('postsCount').textContent = userPosts.length;
            
            // Friends count (users in private chats)
            const friends = new Set();
            privateChats.forEach(chat => {
                if (chat.participants.includes(currentUser.username)) {
                    chat.participants.forEach(p => {
                        if (p !== currentUser.username) friends.add(p);
                    });
                }
            });
            document.getElementById('friendsCount').textContent = friends.size;
            
            // Groups count
            const userGroups = groups.filter(g => g.members.includes(currentUser.username));
            document.getElementById('groupsCount').textContent = userGroups.length;
            
            // Unread chats count
            let totalUnread = 0;
            Object.values(unreadCounts).forEach(count => {
                totalUnread += count;
            });
            const badge = document.getElementById('unreadChatsCount');
            if (totalUnread > 0) {
                badge.textContent = totalUnread > 99 ? '99+' : totalUnread;
                badge.style.display = 'flex';
            } else {
                badge.style.display = 'none';
            }
        }
        
        function showContent(page) {
            // Hide all pages
            document.querySelectorAll('.content-page').forEach(p => p.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(i => i.classList.remove('active'));
            
            // Show selected page
            document.getElementById(page + 'Page').classList.add('active');
            document.querySelector(`.nav-item[data-page="${page}"]`).classList.add('active');
            document.getElementById('contentTitle').textContent = getPageTitle(page);
            
            // Special handling for chats page
            if (page === 'chats') {
                document.getElementById('emptyChatState').style.display = currentChat ? 'none' : 'flex';
                document.getElementById('chatContent').classList.toggle('active', !!currentChat);
                document.getElementById('chatHeader').classList.toggle('hidden', !currentChat);
            } else {
                document.getElementById('emptyChatState').style.display = 'none';
                document.getElementById('chatContent').classList.remove('active');
            }
        }
        
        function getPageTitle(page) {
            const titles = {
                feed: '–õ–µ–Ω—Ç–∞ –Ω–æ–≤–æ—Å—Ç–µ–π',
                chats: '–ß–∞—Ç—ã',
                profile: '–ü—Ä–æ—Ñ–∏–ª—å',
                groups: '–ì—Ä—É–ø–ø—ã',
                channels: '–ö–∞–Ω–∞–ª—ã'
            };
            return titles[page] || '–°–æ—Ü–∏–∞–ª—å–Ω–∞—è —Å–µ—Ç—å';
        }
        
        // ==================== CHAT MANAGEMENT ====================
        
        function showStartChatModal() {
            document.getElementById('startChatModal').style.display = 'block';
            document.getElementById('privateChatModal').style.display = 'none';
            document.getElementById('groupChatModal').style.display = 'none';
            document.getElementById('createChannelModal').style.display = 'none';
            document.getElementById('modalOverlay').style.display = 'flex';
        }
        
        function showPrivateChatModal() {
            document.getElementById('startChatModal').style.display = 'none';
            document.getElementById('privateChatModal').style.display = 'block';
            document.getElementById('groupChatModal').style.display = 'none';
            document.getElementById('createChannelModal').style.display = 'none';
            
            // Populate user suggestions
            const suggestions = document.getElementById('userSuggestions');
            suggestions.innerHTML = '';
            
            Object.keys(users).forEach(username => {
                if (username !== currentUser.username) {
                    const user = users[username];
                    const div = document.createElement('div');
                    div.className = 'chat-item';
                    div.style.margin = '5px 0';
                    div.style.cursor = 'pointer';
                    div.onclick = () => {
                        document.getElementById('privateChatUsername').value = username;
                        suggestions.innerHTML = '';
                    };
                    div.innerHTML = `
                        <div class="chat-avatar">${user.name.charAt(0).toUpperCase()}</div>
                        <div class="chat-info">
                            <h4>${user.name}</h4>
                            <p>@${username}</p>
                        </div>
                    `;
                    suggestions.appendChild(div);
                }
            });
        }
        
        function showGroupChatModal() {
            document.getElementById('startChatModal').style.display = 'none';
            document.getElementById('privateChatModal').style.display = 'none';
            document.getElementById('groupChatModal').style.display = 'block';
            document.getElementById('createChannelModal').style.display = 'none';
        }
        
        function showCreateChannelModal() {
            document.getElementById('startChatModal').style.display = 'none';
            document.getElementById('privateChatModal').style.display = 'none';
            document.getElementById('groupChatModal').style.display = 'none';
            document.getElementById('createChannelModal').style.display = 'block';
        }
        
        function closeModal() {
            document.getElementById('modalOverlay').style.display = 'none';
        }
        
        function createPrivateChat() {
            const username = document.getElementById('privateChatUsername').value.trim().toLowerCase();
            
            if (!username) {
                showError('–û—à–∏–±–∫–∞', '–í–≤–µ–¥–∏—Ç–µ –Ω–∏–∫–Ω–µ–π–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è');
                return;
            }
            
            if (!users[username]) {
                showError('–û—à–∏–±–∫–∞', '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–µ –Ω–∞–π–¥–µ–Ω');
                return;
            }
            
            if (username === currentUser.username) {
                showError('–û—à–∏–±–∫–∞', '–ù–µ–ª—å–∑—è —Å–æ–∑–¥–∞—Ç—å —á–∞—Ç —Å —Å–∞–º–∏–º —Å–æ–±–æ–π');
                return;
            }
            
            // Check if chat already exists
            const chatId = `private_${[currentUser.username, username].sort().join('_')}`;
            let chat = privateChats.find(c => c.id === chatId);
            
            if (!chat) {
                chat = {
                    id: chatId,
                    participants: [currentUser.username, username],
                    created: new Date().toISOString(),
                    lastActivity: new Date().toISOString(),
                    type: 'private'
                };
                privateChats.push(chat);
                saveData();
            }
            
            // Open the chat
            openChat(chatId, 'private');
            closeModal();
            showSuccess('–ß–∞—Ç —Å–æ–∑–¥–∞–Ω', `–ù–∞—á–∞–ª–∏ —á–∞—Ç —Å ${users[username].name}`);
        }
        
        function createGroupChat() {
            const name = document.getElementById('groupChatName').value.trim();
            const membersInput = document.getElementById('groupChatMembers').value.trim().toLowerCase();
            
            if (!name) {
                showError('–û—à–∏–±–∫–∞', '–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –≥—Ä—É–ø–ø—ã');
                return;
            }
            
            if (name.length > 50) {
                showError('–û—à–∏–±–∫–∞', '–ù–∞–∑–≤–∞–Ω–∏–µ –≥—Ä—É–ø–ø—ã —Å–ª–∏—à–∫–æ–º –¥–ª–∏–Ω–Ω–æ–µ');
                return;
            }
            
            const members = membersInput.split(',')
                .map(m => m.trim())
                .filter(m => m && users[m] && m !== currentUser.username);
            const allMembers = [currentUser.username, ...new Set(members)];
            
            if (allMembers.length < 2) {
                showError('–û—à–∏–±–∫–∞', '–î–æ–±–∞–≤—å—Ç–µ —Ö–æ—Ç—è –±—ã –æ–¥–Ω–æ–≥–æ —É—á–∞—Å—Ç–Ω–∏–∫–∞');
                return;
            }
            
            const groupId = `group_${Date.now()}`;
            const group = {
                id: groupId,
                name: name,
                description: `–ì—Ä—É–ø–ø–æ–≤–æ–π —á–∞—Ç: ${name}`,
                creator: currentUser.username,
                members: allMembers,
                created: new Date().toISOString(),
                lastActivity: new Date().toISOString(),
                type: 'group',
                settings: {
                    joinByLink: false,
                    adminOnlyPosts: false,
                    visible: true
                }
            };
            
            groups.push(group);
            
            // Create chat for group
            const chatId = groupId;
            if (!messages[chatId]) {
                messages[chatId] = [];
            }
            
            saveData();
            renderGroups();
            openChat(chatId, 'group');
            closeModal();
            showSuccess('–ì—Ä—É–ø–ø–∞ —Å–æ–∑–¥–∞–Ω–∞', `–ì—Ä—É–ø–ø–∞ "${name}" —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω–∞`);
        }
        
        function createChannel() {
            const name = document.getElementById('channelName').value.trim();
            const description = document.getElementById('channelDescription').value.trim();
            
            if (!name) {
                showError('–û—à–∏–±–∫–∞', '–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –∫–∞–Ω–∞–ª–∞');
                return;
            }
            
            if (name.length > 50) {
                showError('–û—à–∏–±–∫–∞', '–ù–∞–∑–≤–∞–Ω–∏–µ –∫–∞–Ω–∞–ª–∞ —Å–ª–∏—à–∫–æ–º –¥–ª–∏–Ω–Ω–æ–µ');
                return;
            }
            
            const channelId = `channel_${Date.now()}`;
            const channel = {
                id: channelId,
                name: name,
                description: description,
                creator: currentUser.username,
                admins: [currentUser.username],
                subscribers: [currentUser.username],
                created: new Date().toISOString(),
                lastActivity: new Date().toISOString(),
                type: 'channel',
                settings: {
                    adminOnlyPosts: true,
                    visible: true,
                    allowComments: false
                }
            };
            
            channels.push(channel);
            
            // Create chat for channel
            const chatId = channelId;
            if (!messages[chatId]) {
                messages[chatId] = [];
            }
            
            saveData();
            renderChannels();
            openChat(chatId, 'channel');
            closeModal();
            showSuccess('–ö–∞–Ω–∞–ª —Å–æ–∑–¥–∞–Ω', `–ö–∞–Ω–∞–ª "${name}" —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω`);
        }
        
        function openChat(chatId, type) {
            currentChat = chatId;
            currentChatType = type;
            
            // Update UI
            showContent('chats');
            document.getElementById('emptyChatState').style.display = 'none';
            document.getElementById('chatContent').classList.add('active');
            document.getElementById('chatHeader').classList.remove('hidden');
            
            // Load chat info
            loadChatInfo(chatId, type);
            
            // Load messages
            loadMessages(chatId);
            
            // Reset unread count
            unreadCounts[chatId] = 0;
            updateCounts();
            renderChatsList();
            
            // Mark all messages as read
            if (messages[chatId]) {
                messages[chatId].forEach(msg => {
                    if (!msg.readBy) msg.readBy = [];
                    if (!msg.readBy.includes(currentUser.username)) {
                        msg.readBy.push(currentUser.username);
                    }
                });
                saveData();
            }
        }
        
        function loadChatInfo(chatId, type) {
            const avatarEl = document.getElementById('currentChatAvatar');
            const nameEl = document.getElementById('currentChatName');
            const infoEl = document.getElementById('currentChatInfo');
            
            if (type === 'private') {
                const otherUsername = chatId.replace(`private_${currentUser.username}_`, '').replace(`private_${currentUser.username}`, '').replace('private_', '').replace(`_${currentUser.username}`, '');
                const user = users[otherUsername];
                if (user) {
                    avatarEl.textContent = user.name.charAt(0).toUpperCase();
                    if (user.avatar) {
                        avatarEl.style.backgroundImage = `url(${user.avatar})`;
                        avatarEl.textContent = '';
                    }
                    nameEl.textContent = user.name;
                    infoEl.textContent = user.online ? '–û–Ω–ª–∞–π–Ω' : '–ë—ã–ª(–∞) –Ω–µ–¥–∞–≤–Ω–æ';
                }
            } else if (type === 'group') {
                const group = groups.find(g => g.id === chatId);
                if (group) {
                    avatarEl.textContent = 'üë•';
                    avatarEl.style.backgroundImage = '';
                    nameEl.textContent = group.name;
                    infoEl.textContent = `${group.members.length} —É—á–∞—Å—Ç–Ω–∏–∫–æ–≤`;
                }
            } else if (type === 'channel') {
                const channel = channels.find(c => c.id === chatId);
                if (channel) {
                    avatarEl.textContent = 'üì¢';
                    avatarEl.style.backgroundImage = '';
                    nameEl.textContent = channel.name;
                    infoEl.textContent = `${channel.subscribers.length} –ø–æ–¥–ø–∏—Å—á–∏–∫–æ–≤`;
                }
            }
        }
        
        function loadMessages(chatId) {
            const container = document.getElementById('messagesContainer');
            const chatMessages = messages[chatId] || [];
            
            // Clear container but keep date badge
            const dateBadge = container.querySelector('.message-date');
            container.innerHTML = '';
            if (dateBadge) {
                container.appendChild(dateBadge);
            }
            
            // Group messages by date
            const messagesByDate = {};
            chatMessages.forEach(msg => {
                const date = new Date(msg.timestamp).toDateString();
                if (!messagesByDate[date]) {
                    messagesByDate[date] = [];
                }
                messagesByDate[date].push(msg);
            });
            
            // Render messages
            Object.keys(messagesByDate).forEach(date => {
                // Add date separator
                if (date !== new Date().toDateString()) {
                    const dateDiv = document.createElement('div');
                    dateDiv.className = 'message-date';
                    dateDiv.innerHTML = `<span class="date-badge">${new Date(date).toLocaleDateString()}</span>`;
                    container.appendChild(dateDiv);
                }
                
                // Add messages
                messagesByDate[date].forEach(msg => {
                    const messageDiv = createMessageElement(msg);
                    container.appendChild(messageDiv);
                });
            });
            
            // Scroll to bottom
            container.scrollTop = container.scrollHeight;
        }
        
        function createMessageElement(msg) {
            const isOwn = msg.sender === currentUser.username;
            const isSystem = msg.type === 'system';
            const isSticker = msg.type === 'sticker';
            
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${isOwn ? 'sent' : 'received'} ${isSystem ? 'system' : ''}`;
            messageDiv.dataset.messageId = msg.id;
            
            // Message content
            let contentHTML = '';
            if (isSticker) {
                contentHTML = `<div class="message-bubble sticker-message">${msg.text}</div>`;
            } else if (isSystem) {
                contentHTML = `<div class="message-bubble" style="background: #e5e5ea; color: #8e8e93; font-style: italic;">${msg.text}</div>`;
            } else {
                contentHTML = `<div class="message-bubble">${msg.text}</div>`;
            }
            
            // Reactions
            const messageReactions = reactions[msg.id] || {};
            let reactionsHTML = '';
            Object.keys(messageReactions).forEach(emoji => {
                const users = messageReactions[emoji];
                const userReacted = users.includes(currentUser.username);
                reactionsHTML += `
                    <button class="reaction-btn ${userReacted ? 'active' : ''}" 
                            onclick="toggleReaction('${msg.id}', '${emoji}')">
                        ${emoji} ${users.length}
                    </button>
                `;
            });
            
            // Message info
            const time = new Date(msg.timestamp).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            const senderName = isSystem ? '–°–∏—Å—Ç–µ–º–∞' : (users[msg.sender]?.name || msg.sender);
            
            messageDiv.innerHTML = `
                ${contentHTML}
                ${reactionsHTML ? `<div class="message-reactions">${reactionsHTML}</div>` : ''}
                <div class="message-info">
                    <span class="message-sender">${senderName}</span>
                    <span class="message-time">${time}</span>
                    ${isOwn ? `<span class="message-status">${msg.readBy && msg.readBy.length > 1 ? 'üëÅÔ∏è' : '‚úì'}</span>` : ''}
                </div>
            `;
            
            // Add context menu on long press/double click
            messageDiv.addEventListener('dblclick', () => showReactionPicker(msg.id));
            messageDiv.addEventListener('contextmenu', (e) => {
                e.preventDefault();
                showMessageContextMenu(e, msg);
            });
            
            return messageDiv;
        }
        
        function sendMessage() {
            const input = document.getElementById('messageInput');
            const text = input.value.trim();
            
            if (!text || !currentChat || !currentUser) return;
            
            const message = {
                id: Date.now() + '_' + Math.random().toString(36).substr(2, 9),
                text: text,
                sender: currentUser.username,
                chat: currentChat,
                type: 'text',
                timestamp: new Date().toISOString(),
                readBy: [currentUser.username]
            };
            
            // Add to messages
            if (!messages[currentChat]) {
                messages[currentChat] = [];
            }
            messages[currentChat].push(message);
            
            // Update chat last activity
            updateChatActivity(currentChat);
            
            // Save and update UI
            saveData();
            loadMessages(currentChat);
            renderChatsList();
            
            // Clear input
            input.value = '';
            input.style.height = 'auto';
            
            // Notify other users (simulated)
            simulateMessageNotification(currentChat, currentUser.name);
        }
        
        function sendSticker(sticker) {
            if (!currentChat || !currentUser) return;
            
            const message = {
                id: Date.now() + '_' + Math.random().toString(36).substr(2, 9),
                text: sticker,
                sender: currentUser.username,
                chat: currentChat,
                type: 'sticker',
                timestamp: new Date().toISOString(),
                readBy: [currentUser.username]
            };
            
            if (!messages[currentChat]) {
                messages[currentChat] = [];
            }
            messages[currentChat].push(message);
            
            updateChatActivity(currentChat);
            saveData();
            loadMessages(currentChat);
            renderChatsList();
            toggleStickersPicker();
        }
        
        // ==================== REACTIONS ====================
        
        function showReactionPicker(messageId) {
            selectedMessageForReaction = messageId;
            document.getElementById('reactionPickerModal').style.display = 'block';
            document.getElementById('modalOverlay').style.display = 'flex';
        }
        
        function addReaction(emoji) {
            if (!selectedMessageForReaction) return;
            toggleReaction(selectedMessageForReaction, emoji);
            closeModal();
        }
        
        function toggleReaction(messageId, emoji) {
            if (!reactions[messageId]) {
                reactions[messageId] = {};
            }
            
            if (!reactions[messageId][emoji]) {
                reactions[messageId][emoji] = [];
            }
            
            const users = reactions[messageId][emoji];
            const userIndex = users.indexOf(currentUser.username);
            
            if (userIndex > -1) {
                // Remove reaction
                users.splice(userIndex, 1);
                if (users.length === 0) {
                    delete reactions[messageId][emoji];
                }
            } else {
                // Add reaction
                users.push(currentUser.username);
            }
            
            if (Object.keys(reactions[messageId]).length === 0) {
                delete reactions[messageId];
            }
            
            saveData();
            
            // Update message display
            const messageDiv = document.querySelector(`.message[data-message-id="${messageId}"]`);
            if (messageDiv) {
                const messageReactions = reactions[messageId] || {};
                let reactionsHTML = '';
                Object.keys(messageReactions).forEach(e => {
                    const users = messageReactions[e];
                    const userReacted = users.includes(currentUser.username);
                    reactionsHTML += `
                        <button class="reaction-btn ${userReacted ? 'active' : ''}" 
                                onclick="toggleReaction('${messageId}', '${e}')">
                            ${e} ${users.length}
                        </button>
                    `;
                });
                
                const reactionsContainer = messageDiv.querySelector('.message-reactions');
                if (reactionsHTML) {
                    if (reactionsContainer) {
                        reactionsContainer.innerHTML = reactionsHTML;
                    } else {
                        const newContainer = document.createElement('div');
                        newContainer.className = 'message-reactions';
                        newContainer.innerHTML = reactionsHTML;
                        messageDiv.querySelector('.message-info').before(newContainer);
                    }
                } else if (reactionsContainer) {
                    reactionsContainer.remove();
                }
            }
        }
        
        // ==================== FEED & POSTS ====================
        
        function loadFeed() {
            const postsList = document.getElementById('postsList');
            postsList.innerHTML = '';
            
            // Sort posts by date (newest first)
            const sortedPosts = [...posts].sort((a, b) => new Date(b.created) - new Date(a.created));
            
            sortedPosts.forEach(post => {
                const postElement = createPostElement(post);
                postsList.appendChild(postElement);
            });
            
            // Update user posts on profile
            renderUserPosts();
        }
        
        function createPostElement(post) {
            const user = users[post.author];
            if (!user) return null;
            
            const isOwn = post.author === currentUser.username;
            const isLiked = post.likes?.includes(currentUser.username) || false;
            const likesCount = post.likes?.length || 0;
            const commentsCount = post.comments?.length || 0;
            
            const postDiv = document.createElement('div');
            postDiv.className = 'post-card';
            postDiv.dataset.postId = post.id;
            
            postDiv.innerHTML = `
                <div class="post-header">
                    <div class="post-avatar" style="${user.avatar ? `background-image: url(${user.avatar})` : ''}">
                        ${user.avatar ? '' : user.name.charAt(0).toUpperCase()}
                    </div>
                    <div class="post-author">
                        <h4>${user.name}</h4>
                        <span>${new Date(post.created).toLocaleDateString()} –≤ ${new Date(post.created).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</span>
                    </div>
                    ${isOwn ? `
                        <div class="post-menu">
                            <button class="menu-btn" onclick="showPostContextMenu(event, '${post.id}')">‚ãØ</button>
                        </div>
                    ` : ''}
                </div>
                <div class="post-content">
                    ${post.text ? `<div class="post-text">${post.text}</div>` : ''}
                    ${post.image ? `<img src="${post.image}" class="post-image" alt="–ü–æ—Å—Ç ${user.name}">` : ''}
                    <div class="post-stats">
                        <span>${likesCount} ‚ù§Ô∏è</span>
                        <span>${commentsCount} üí¨</span>
                    </div>
                </div>
                <div class="post-actions">
                    <button class="post-action-btn ${isLiked ? 'liked' : ''}" onclick="toggleLike('${post.id}')">
                        ${isLiked ? '‚ù§Ô∏è' : 'ü§ç'} –ù—Ä–∞–≤–∏—Ç—Å—è
                    </button>
                    <button class="post-action-btn" onclick="showComments('${post.id}')">
                        üí¨ –ö–æ–º–º–µ–Ω—Ç–∏—Ä–æ–≤–∞—Ç—å
                    </button>
                    <button class="post-action-btn" onclick="sharePost('${post.id}')">
                        üîó –ü–æ–¥–µ–ª–∏—Ç—å—Å—è
                    </button>
                </div>
            `;
            
            // Add context menu for reactions
            postDiv.addEventListener('dblclick', () => toggleLike(post.id));
            
            return postDiv;
        }
        
        function createPost() {
            const text = document.getElementById('postText').value.trim();
            const imageInput = document.getElementById('postImageInput');
            
            if (!text && !imageInput.files[0]) {
                showError('–û—à–∏–±–∫–∞', '–î–æ–±–∞–≤—å—Ç–µ —Ç–µ–∫—Å—Ç –∏–ª–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ');
                return;
            }
            
            const post = {
                id: 'post_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9),
                author: currentUser.username,
                text: text,
                image: '',
                likes: [],
                comments: [],
                created: new Date().toISOString(),
                type: 'post'
            };
            
            // Handle image upload
            if (imageInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    post.image = e.target.result;
                    savePost(post);
                };
                reader.readAsDataURL(imageInput.files[0]);
            } else {
                savePost(post);
            }
            
            // Clear form
            document.getElementById('postText').value = '';
            imageInput.value = '';
        }
        
        function savePost(post) {
            posts.unshift(post);
            saveData();
            loadFeed();
            showSuccess('–ü–æ—Å—Ç –æ–ø—É–±–ª–∏–∫–æ–≤–∞–Ω', '–í–∞—à –ø–æ—Å—Ç —Ç–µ–ø–µ—Ä—å –≤–∏–¥–µ–Ω –¥—Ä—É–≥–∏–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º');
        }
        
        function toggleLike(postId) {
            const post = posts.find(p => p.id === postId);
            if (!post) return;
            
            if (!post.likes) post.likes = [];
            
            const likeIndex = post.likes.indexOf(currentUser.username);
            if (likeIndex > -1) {
                post.likes.splice(likeIndex, 1);
            } else {
                post.likes.push(currentUser.username);
                
                // Show reaction animation
                const postDiv = document.querySelector(`.post-card[data-post-id="${postId}"]`);
                if (postDiv) {
                    const likeBtn = postDiv.querySelector('.post-action-btn');
                    likeBtn.classList.add('liked');
                    likeBtn.innerHTML = '‚ù§Ô∏è –ù—Ä–∞–≤–∏—Ç—Å—è';
                    
                    // Add temporary animation
                    const heart = document.createElement('div');
                    heart.innerHTML = '‚ù§Ô∏è';
                    heart.style.position = 'absolute';
                    heart.style.fontSize = '24px';
                    heart.style.animation = 'heartFloat 1s ease-out forwards';
                    heart.style.pointerEvents = 'none';
                    heart.style.zIndex = '100';
                    
                    postDiv.appendChild(heart);
                    setTimeout(() => heart.remove(), 1000);
                }
            }
            
            saveData();
            loadFeed();
        }
        
        // ==================== GROUPS & CHANNELS ====================
        
        function renderGroups() {
            const grid = document.getElementById('groupsGrid');
            grid.innerHTML = '';
            
            // Show groups user is member of
            const userGroups = groups.filter(g => g.members.includes(currentUser.username));
            
            userGroups.forEach(group => {
                const groupCard = createGroupCard(group);
                grid.appendChild(groupCard);
            });
            
            // Show suggested groups (not member of)
            const suggestedGroups = groups.filter(g => !g.members.includes(currentUser.username) && g.settings.visible).slice(0, 3);
            
            if (suggestedGroups.length > 0) {
                const title = document.createElement('h3');
                title.textContent = '–†–µ–∫–æ–º–µ–Ω–¥—É–µ–º—ã–µ –≥—Ä—É–ø–ø—ã';
                title.style.margin = '30px 0 15px';
                title.style.color = '#1c1c1e';
                grid.appendChild(title);
                
                suggestedGroups.forEach(group => {
                    const groupCard = createGroupCard(group, true);
                    grid.appendChild(groupCard);
                });
            }
        }
        
        function createGroupCard(group, isSuggested = false) {
            const isMember = group.members.includes(currentUser.username);
            const isCreator = group.creator === currentUser.username;
            
            const card = document.createElement('div');
            card.className = 'card';
            
            card.innerHTML = `
                <div class="card-header">
                    <div class="card-icon">üë•</div>
                    <div>
                        <div class="card-title">${group.name}</div>
                        <div class="card-subtitle">${group.description || '–ì—Ä—É–ø–ø–æ–≤–æ–π —á–∞—Ç'}</div>
                    </div>
                </div>
                <div class="card-content">
                    <p style="font-size: 14px; color: #8e8e93; margin-bottom: 10px;">${group.members.length} —É—á–∞—Å—Ç–Ω–∏–∫–æ–≤</p>
                </div>
                <div class="card-actions">
                    <button class="card-btn ${isMember ? 'joined' : ''}" 
                            onclick="${isMember ? `openChat('${group.id}', 'group')` : `joinGroup('${group.id}')`}">
                        ${isMember ? (isCreator ? '–í—ã —Å–æ–∑–¥–∞—Ç–µ–ª—å' : '–û—Ç–∫—Ä—ã—Ç—å —á–∞—Ç') : '–ü—Ä–∏—Å–æ–µ–¥–∏–Ω–∏—Ç—å—Å—è'}
                    </button>
                </div>
            `;
            
            return card;
        }
        
        function joinGroup(groupId) {
            const group = groups.find(g => g.id === groupId);
            if (!group) return;
            
            if (!group.members.includes(currentUser.username)) {
                group.members.push(currentUser.username);
                saveData();
                renderGroups();
                showSuccess('–í—ã –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–∏–ª–∏—Å—å', `–¢–µ–ø–µ—Ä—å –≤—ã —É—á–∞—Å—Ç–Ω–∏–∫ –≥—Ä—É–ø–ø—ã "${group.name}"`);
                
                // Add welcome message
                addGroupWelcomeMessage(groupId);
            }
        }
        
        function renderChannels() {
            const grid = document.getElementById('channelsGrid');
            grid.innerHTML = '';
            
            // Show subscribed channels
            const subscribedChannels = channels.filter(c => c.subscribers.includes(currentUser.username));
            
            subscribedChannels.forEach(channel => {
                const channelCard = createChannelCard(channel);
                grid.appendChild(channelCard);
            });
            
            // Show suggested channels
            const suggestedChannels = channels.filter(c => !c.subscribers.includes(currentUser.username) && c.settings.visible).slice(0, 3);
            
            if (suggestedChannels.length > 0) {
                const title = document.createElement('h3');
                title.textContent = '–†–µ–∫–æ–º–µ–Ω–¥—É–µ–º—ã–µ –∫–∞–Ω–∞–ª—ã';
                title.style.margin = '30px 0 15px';
                title.style.color = '#1c1c1e';
                grid.appendChild(title);
                
                suggestedChannels.forEach(channel => {
                    const channelCard = createChannelCard(channel, true);
                    grid.appendChild(channelCard);
                });
            }
        }
        
        function createChannelCard(channel, isSuggested = false) {
            const isSubscribed = channel.subscribers.includes(currentUser.username);
            const isAdmin = channel.admins.includes(currentUser.username);
            
            const card = document.createElement('div');
            card.className = 'card';
            
            card.innerHTML = `
                <div class="card-header">
                    <div class="card-icon">üì¢</div>
                    <div>
                        <div class="card-title">${channel.name}</div>
                        <div class="card-subtitle">${channel.description || '–ü—É–±–ª–∏—á–Ω—ã–π –∫–∞–Ω–∞–ª'}</div>
                    </div>
                </div>
                <div class="card-content">
                    <p style="font-size: 14px; color: #8e8e93; margin-bottom: 10px;">${channel.subscribers.length} –ø–æ–¥–ø–∏—Å—á–∏–∫–æ–≤</p>
                    <p style="font-size: 12px; color: #8e8e93;">${channel.settings.adminOnlyPosts ? '–¢–æ–ª—å–∫–æ –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä—ã –ø—É–±–ª–∏–∫—É—é—Ç' : '–í—Å–µ –º–æ–≥—É—Ç –ø—É–±–ª–∏–∫–æ–≤–∞—Ç—å'}</p>
                </div>
                <div class="card-actions">
                    <button class="card-btn ${isSubscribed ? 'joined' : ''}" 
                            onclick="${isSubscribed ? `openChat('${channel.id}', 'channel')` : `subscribeChannel('${channel.id}')`}">
                        ${isSubscribed ? (isAdmin ? '–í—ã –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä' : '–û—Ç–∫—Ä—ã—Ç—å –∫–∞–Ω–∞–ª') : '–ü–æ–¥–ø–∏—Å–∞—Ç—å—Å—è'}
                    </button>
                </div>
            `;
            
            return card;
        }
        
        function subscribeChannel(channelId) {
            const channel = channels.find(c => c.id === channelId);
            if (!channel) return;
            
            if (!channel.subscribers.includes(currentUser.username)) {
                channel.subscribers.push(currentUser.username);
                saveData();
                renderChannels();
                showSuccess('–í—ã –ø–æ–¥–ø–∏—Å–∞–ª–∏—Å—å', `–¢–µ–ø–µ—Ä—å –≤—ã –ø–æ–¥–ø–∏—Å–∞–Ω—ã –Ω–∞ –∫–∞–Ω–∞–ª "${channel.name}"`);
            }
        }
        
        // ==================== PROFILE MANAGEMENT ====================
        
        function changeAvatar() {
            document.getElementById('avatarInput').click();
        }
        
        document.getElementById('avatarInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;
            
            if (!file.type.startsWith('image/')) {
                showError('–û—à–∏–±–∫–∞', '–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ');
                return;
            }
            
            if (file.size > 5 * 1024 * 1024) { // 5MB limit
                showError('–û—à–∏–±–∫–∞', '–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –º–µ–Ω—å—à–µ 5MB');
                return;
            }
            
            const reader = new FileReader();
            reader.onload = function(e) {
                currentUser.avatar = e.target.result;
                if (users[currentUser.username]) {
                    users[currentUser.username].avatar = e.target.result;
                }
                
                saveData();
                updateAvatar();
                showSuccess('–ê–≤–∞—Ç–∞—Ä –æ–±–Ω–æ–≤–ª–µ–Ω', '–ù–æ–≤–æ–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –ø—Ä–æ—Ñ–∏–ª—è —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ');
            };
            reader.readAsDataURL(file);
        });
        
        function editProfile() {
            // In a real app, this would open an edit form
            showInfo('–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ', '–í –±—É–¥—É—â–∏—Ö –≤–µ—Ä—Å–∏—è—Ö –∑–¥–µ—Å—å –±—É–¥–µ—Ç —Ñ–æ—Ä–º–∞ —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –ø—Ä–æ—Ñ–∏–ª—è');
        }
        
        function renderUserPosts() {
            const container = document.getElementById('userPosts');
            const userPosts = posts.filter(p => p.author === currentUser.username).slice(0, 10);
            
            container.innerHTML = '';
            
            if (userPosts.length === 0) {
                container.innerHTML = '<p style="color: #8e8e93; text-align: center; padding: 20px;">–£ –≤–∞—Å –µ—â–µ –Ω–µ—Ç –ø–æ—Å—Ç–æ–≤</p>';
                return;
            }
            
            userPosts.forEach(post => {
                const postElement = createPostElement(post);
                if (postElement) {
                    container.appendChild(postElement);
                }
            });
        }
        
        // ==================== CHATS LIST ====================
        
        function renderChatsList() {
            const container = document.getElementById('chatsList');
            container.innerHTML = '';
            
            // Collect all chats user has access to
            const userChats = [];
            
            // Private chats
            privateChats.forEach(chat => {
                if (chat.participants.includes(currentUser.username)) {
                    userChats.push({
                        id: chat.id,
                        name: getChatName(chat.id, 'private'),
                        lastMessage: getLastMessage(chat.id),
                        type: 'private',
                        unread: unreadCounts[chat.id] || 0,
                        lastActivity: chat.lastActivity
                    });
                }
            });
            
            // Group chats
            groups.forEach(group => {
                if (group.members.includes(currentUser.username)) {
                    userChats.push({
                        id: group.id,
                        name: group.name,
                        lastMessage: getLastMessage(group.id),
                        type: 'group',
                        unread: unreadCounts[group.id] || 0,
                        lastActivity: group.lastActivity
                    });
                }
            });
            
            // Channel chats
            channels.forEach(channel => {
                if (channel.subscribers.includes(currentUser.username)) {
                    userChats.push({
                        id: channel.id,
                        name: channel.name,
                        lastMessage: getLastMessage(channel.id),
                        type: 'channel',
                        unread: unreadCounts[channel.id] || 0,
                        lastActivity: channel.lastActivity
                    });
                }
            });
            
            // Sort by last activity
            userChats.sort((a, b) => new Date(b.lastActivity) - new Date(a.lastActivity));
            
            // Render chats
            userChats.forEach(chat => {
                const chatElement = createChatElement(chat);
                container.appendChild(chatElement);
            });
        }
        
        function createChatElement(chat) {
            const isActive = currentChat === chat.id;
            const lastMessage = chat.lastMessage;
            const time = lastMessage ? new Date(lastMessage.timestamp).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) : '';
            
            const div = document.createElement('div');
            div.className = `chat-item ${isActive ? 'active' : ''}`;
            div.onclick = () => openChat(chat.id, chat.type);
            
            // Get avatar based on chat type
            let avatarContent = '';
            let avatarBg = '';
            
            if (chat.type === 'private') {
                const otherUsername = getOtherParticipant(chat.id);
                const user = users[otherUsername];
                if (user?.avatar) {
                    avatarBg = `background-image: url(${user.avatar})`;
                } else {
                    avatarContent = user?.name?.charAt(0).toUpperCase() || '?';
                }
            } else if (chat.type === 'group') {
                avatarContent = 'üë•';
            } else if (chat.type === 'channel') {
                avatarContent = 'üì¢';
            }
            
            div.innerHTML = `
                <div class="chat-avatar" style="${avatarBg}">${avatarContent}</div>
                <div class="chat-info">
                    <h4>${chat.name}</h4>
                    <p>${lastMessage ? (lastMessage.sender === currentUser.username ? '–í—ã: ' : '') + truncateText(lastMessage.text, 20) : '–ù–µ—Ç —Å–æ–æ–±—â–µ–Ω–∏–π'}</p>
                </div>
                <div class="chat-time">${time}</div>
                ${chat.unread > 0 ? `<div class="unread-badge">${chat.unread > 9 ? '9+' : chat.unread}</div>` : ''}
            `;
            
            return div;
        }
        
        function getChatName(chatId, type) {
            if (type === 'private') {
                const otherUsername = getOtherParticipant(chatId);
                return users[otherUsername]?.name || otherUsername;
            }
            return chatId;
        }
        
        function getOtherParticipant(chatId) {
            const participants = chatId.replace('private_', '').split('_');
            return participants.find(p => p !== currentUser.username) || participants[0];
        }
        
        function getLastMessage(chatId) {
            const chatMessages = messages[chatId];
            if (!chatMessages || chatMessages.length === 0) return null;
            return chatMessages[chatMessages.length - 1];
        }
        
        function updateChatActivity(chatId) {
            const now = new Date().toISOString();
            
            // Update private chat
            let chat = privateChats.find(c => c.id === chatId);
            if (chat) {
                chat.lastActivity = now;
            }
            
            // Update group
            let group = groups.find(g => g.id === chatId);
            if (group) {
                group.lastActivity = now;
            }
            
            // Update channel
            let channel = channels.find(c => c.id === chatId);
            if (channel) {
                channel.lastActivity = now;
            }
            
            saveData();
            renderChatsList();
        }
        
        function checkUnreadMessages() {
            // This would check for new messages in real app
            // For now, just update UI
            renderChatsList();
            updateCounts();
        }
        
        // ==================== UTILITY FUNCTIONS ====================
        
        function truncateText(text, maxLength) {
            if (!text) return '';
            if (text.length <= maxLength) return text;
            return text.substr(0, maxLength) + '...';
        }
        
        function showSuccess(title, text) {
            showNotification('success', '‚úÖ', title, text);
        }
        
        function showError(title, text) {
            showNotification('error', '‚ùå', title, text);
        }
        
        function showInfo(title, text) {
            showNotification('info', 'üí°', title, text);
        }
        
        function showNotification(type, icon, title, text) {
            const notification = document.getElementById('notification');
            notification.className = `notification ${type}`;
            notification.querySelector('#notificationIcon').textContent = icon;
            notification.querySelector('#notificationTitle').textContent = title;
            notification.querySelector('#notificationText').textContent = text;
            notification.classList.remove('hidden');
            
            setTimeout(() => {
                notification.classList.add('hidden');
            }, 5000);
        }
        
        function toggleSidebar() {
            const sidebar = document.getElementById('leftSidebar');
            sidebar.classList.toggle('active');
        }
        
        function initPickers() {
            const emojiPicker = document.getElementById('emojiPicker');
            const stickerPicker = document.getElementById('stickersPicker');
            
            // Emoji picker
            EMOJIS.slice(0, 48).forEach(emoji => {
                const btn = document.createElement('button');
                btn.className = 'emoji-btn';
                btn.textContent = emoji;
                btn.onclick = () => {
                    const input = document.getElementById('messageInput');
                    input.value += emoji;
                    input.focus();
                    toggleEmojiPicker();
                };
                emojiPicker.appendChild(btn);
            });
            
            // Sticker picker
            STICKERS.slice(0, 16).forEach(sticker => {
                const btn = document.createElement('button');
                btn.className = 'sticker-btn';
                btn.textContent = sticker;
                btn.onclick = () => sendSticker(sticker);
                stickerPicker.appendChild(btn);
            });
        }
        
        function toggleEmojiPicker() {
            const picker = document.getElementById('emojiPicker');
            const stickers = document.getElementById('stickersPicker');
            picker.classList.toggle('active');
            stickers.classList.remove('active');
        }
        
        function toggleStickersPicker() {
            const picker = document.getElementById('stickersPicker');
            const emoji = document.getElementById('emojiPicker');
            picker.classList.toggle('active');
            emoji.classList.remove('active');
        }
        
        function updateOnlineStatus() {
            if (currentUser && users[currentUser.username]) {
                users[currentUser.username].lastSeen = new Date().toISOString();
                saveData();
            }
        }
        
        function showTutorial() {
            document.getElementById('tutorialOverlay').classList.remove('hidden');
            localStorage.setItem(`${APP_NAME}_tutorialShown`, 'true');
        }
        
        function closeTutorial() {
            document.getElementById('tutorialOverlay').classList.add('hidden');
        }
        
        // ==================== INITIALIZATION ====================
        
        function addWelcomeMessage(username) {
            // Add welcome message to general chat
            const welcomeMessage = {
                id: 'welcome_' + Date.now(),
                text: `–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ —Å–æ—Ü–∏–∞–ª—å–Ω—É—é —Å–µ—Ç—å, ${username}! üéâ`,
                sender: 'system',
                chat: 'general',
                type: 'system',
                timestamp: new Date().toISOString()
            };
            
            if (!messages.general) {
                messages.general = [];
            }
            messages.general.push(welcomeMessage);
            saveData();
        }
        
        function addGroupWelcomeMessage(groupId) {
            const group = groups.find(g => g.id === groupId);
            if (!group) return;
            
            const welcomeMessage = {
                id: 'group_welcome_' + Date.now(),
                text: `üëã ${currentUser.name} –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–∏–ª—Å—è –∫ –≥—Ä—É–ø–ø–µ!`,
                sender: 'system',
                chat: groupId,
                type: 'system',
                timestamp: new Date().toISOString()
            };
            
            if (!messages[groupId]) {
                messages[groupId] = [];
            }
            messages[groupId].push(welcomeMessage);
            saveData();
            
            if (currentChat === groupId) {
                loadMessages(groupId);
            }
        }
        
        function simulateMessageNotification(chatId, senderName) {
            // Simulate response in private chats
            if (currentChatType === 'private' && Math.random() > 0.7) {
                setTimeout(() => {
                    const otherParticipant = getOtherParticipant(chatId);
                    const user = users[otherParticipant];
                    if (user && user.online) {
                        const responses = [
                            '–ü—Ä–∏–≤–µ—Ç! üëã',
                            '–ö–∞–∫ –¥–µ–ª–∞?',
                            '–ò–Ω—Ç–µ—Ä–µ—Å–Ω–æ!',
                            '–°–æ–≥–ª–∞—Å–µ–Ω! üëç',
                            '–°–ø–∞—Å–∏–±–æ! ‚ú®'
                        ];
                        
                        const response = responses[Math.floor(Math.random() * responses.length)];
                        
                        const message = {
                            id: Date.now() + '_response',
                            text: response,
                            sender: otherParticipant,
                            chat: chatId,
                            type: 'text',
                            timestamp: new Date().toISOString(),
                            readBy: [otherParticipant]
                        };
                        
                        if (!messages[chatId]) {
                            messages[chatId] = [];
                        }
                        messages[chatId].push(message);
                        
                        updateChatActivity(chatId);
                        saveData();
                        
                        if (currentChat === chatId) {
                            loadMessages(chatId);
                        } else {
                            // Increment unread count
                            if (!unreadCounts[chatId]) unreadCounts[chatId] = 0;
                            unreadCounts[chatId]++;
                            updateCounts();
                            renderChatsList();
                        }
                    }
                }, 2000);
            }
        }
        
        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', initializeData);
        
        // Handle Enter key for sending messages
        document.getElementById('messageInput')?.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });
        
        // Handle Enter key for posts
        document.getElementById('postText')?.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && e.ctrlKey) {
                e.preventDefault();
                createPost();
            }
        });
        
        // Close pickers when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.picker') && !e.target.closest('.action-icon') && !e.target.closest('.stickers-btn')) {
                document.getElementById('emojiPicker').classList.remove('active');
                document.getElementById('stickersPicker').classList.remove('active');
            }
        });
        
        // Handle window close - mark user as offline
        window.addEventListener('beforeunload', function() {
            if (currentUser && users[currentUser.username]) {
                users[currentUser.username].online = false;
                users[currentUser.username].lastSeen = new Date().toISOString();
                saveData();
            }
        });
        
        // Add CSS for heart animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes heartFloat {
                0% { transform: translateY(0) scale(1); opacity: 1; }
                100% { transform: translateY(-50px) scale(1.5); opacity: 0; }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
